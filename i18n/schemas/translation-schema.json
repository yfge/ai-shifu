{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ai-shifu.com/schemas/translation-schema.json",
  "title": "AI-Shifu Translation Schema",
  "description": "Schema for validating AI-Shifu translation files",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^[a-z][a-zA-Z0-9]*$": {
      "$ref": "#/$defs/translationModule"
    }
  },
  "$defs": {
    "translationModule": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z][a-zA-Z0-9]*$": {
          "oneOf": [
            { "$ref": "#/$defs/translationValue" },
            { "$ref": "#/$defs/translationGroup" }
          ]
        }
      }
    },
    "translationGroup": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z][a-zA-Z0-9]*$": {
          "oneOf": [
            { "$ref": "#/$defs/translationValue" },
            { "$ref": "#/$defs/translationGroup" }
          ]
        }
      }
    },
    "translationValue": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[^\\n\\r]*$",
      "description": "Translation text value. Can contain interpolation variables in {{variable}} format"
    }
  },
  "properties": {
    "admin": {
      "$ref": "#/$defs/translationModule",
      "description": "Administrative interface translations"
    },
    "api": {
      "$ref": "#/$defs/translationModule",
      "description": "API error messages and responses"
    },
    "auth": {
      "$ref": "#/$defs/translationModule",
      "description": "Authentication and authorization related translations"
    },
